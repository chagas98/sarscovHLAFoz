params {

    dir_results = './results'
    dir_mutations = 'mutations'
    conda_env = '/home/samuel/anaconda3/envs/TCC'

}

process {

    withName: 'GET_GISAID_SEQUENCES|GET_REFSEQ_SARS' {

        publishDir = [
            [
                path: "${params.dir_results}/raw_data",
                pattern: "**.{fasta,csv}",
                mode: 'copy',
                overwrite: true
            ]
        ]

        conda = "${params.conda_env}"
    }

    withName: 'SELECT_BY_LINEAGE|RUN_MAPPING_MINIMAP2|VARIANT_CALLER|RUN_ANNOT_SNPEFF|RUN_EPYTOPE_PREDICTION' {

        publishDir = [
            [
                path: "${params.dir_results}/${params.dir_mutations}",
                pattern: "**.{fasta,bam,bai,sam,vcf,csv,html}",
                mode: 'copy',
                overwrite: true
            ]
        ]
        
        conda = "${params.conda_env}"
    }
}


conda {
    enabled = true
}

env {
    R_PROFILE_USER= "~/Rscripts/.Rprofile"
    R_ENVIRON_USER = "~/Rscripts/.Renviron"
    }


